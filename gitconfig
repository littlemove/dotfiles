[user]
  name = Diego Fernández Fernández
  email = diego@simplelogica.net

[color]
  ui = true
  branch = auto
  diff = auto
  status = auto

  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

  [color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
  st = status
  co = commit
  br = branch
  ck = checkout
  df = diff
  lg = log -p
  ap = add --patch
  spull = !git-svn fetch && git-svn rebase
  spush = !git-svn dcommit
